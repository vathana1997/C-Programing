#include <stdio.h>

struct Book {
    int bookID;
    char title[50];
    float price;
};

int main() {
    int n, i;
    printf("Enter number of books: ");
    scanf("%d", &n);

    struct Book books[n];
    for (i = 0; i < n; i++) {
        printf("\nEnter details of book %d:\n", i+1);
        printf("Book ID: ");
        scanf("%d", &books[i].bookID);
        printf("Title: ");
        scanf("%s", books[i].title);
        printf("Price: ");
        scanf("%f", &books[i].price);
    }

    printf("\n--- Book Details ---\n");
    for (i = 0; i < n; i++) {
        printf("ID: %d, Title: %s, Price: %.2f\n", books[i].bookID, books[i].title, books[i].price);
    }
    return 0;
}
