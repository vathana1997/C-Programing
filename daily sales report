#include <stdio.h>

int main() {
    int n, i;
    float sales[100], total = 0;

    printf("Enter number of days: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Enter sales for day %d: ", i+1);
        scanf("%f", &sales[i]);
        total += sales[i];
    }

    printf("\n--- Sales Report ---\n");
    for (i = 0; i < n; i++) {
        printf("Day %d: %.2f\n", i+1, sales[i]);
    }
    printf("Total Sales = %.2f\n", total);

    return 0;
}
