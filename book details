#include <stdio.h>

// Define structure for book
struct Book {
    int bookID;
    char title[50];
    char author[50];
    float price;
};

int main() {
    int n, i;

    printf("Enter number of books: ");
    scanf("%d", &n);

    struct Book books[n];  // Array of structures

    // Input book details
    for (i = 0; i < n; i++) {
        printf("\nEnter details of book %d:\n", i + 1);
        printf("Book ID: ");
        scanf("%d", &books[i].bookID);
        printf("Title: ");
        scanf("%s", books[i].title);
        printf("Author: ");
        scanf("%s", books[i].author);
        printf("Price: ");
        scanf("%f", &books[i].price);
    }

    // Display book details
    printf("\n--- Library Book Details ---\n");
    for (i = 0; i < n; i++) {
        printf("Book %d:\n", i + 1);
        printf("ID: %d\n", books[i].bookID);
        printf("Title: %s\n", books[i].title);
        printf("Author: %s\n", books[i].author);
        printf("Price: %.2f\n", books[i].price);
        printf("---------------------------\n");
    }

    return 0;
}
