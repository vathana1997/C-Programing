#include <stdio.h>
#include <string.h>

struct Customer {
    int customerID;
    char name[50];
    char mobile[15];
};

int main() {
    int n, i, searchID;
    printf("Enter number of customers: ");
    scanf("%d", &n);

    struct Customer customers[n];
    for (i = 0; i < n; i++) {
        printf("\nEnter details of customer %d:\n", i+1);
        printf("Customer ID: ");
        scanf("%d", &customers[i].customerID);
        printf("Name: ");
        scanf("%s", customers[i].name);
        printf("Mobile Number: ");
        scanf("%s", customers[i].mobile);
    }

    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchID);

    for (i = 0; i < n; i++) {
        if (customers[i].customerID == searchID) {
            printf("Found: ID=%d, Name=%s, Mobile=%s\n", customers[i].customerID, customers[i].name, customers[i].mobile);
            return 0;
        }
    }
    printf("Customer not found!\n");
    return 0;
}
