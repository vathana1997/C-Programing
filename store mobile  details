#include <stdio.h>

// Define structure for mobile
struct Mobile {
    int mobileID;
    char brand[50];
    char model[50];
    float price;
    int storage; // in GB
};

int main() {
    int n, i;

    printf("Enter number of mobiles: ");
    scanf("%d", &n);

    struct Mobile mobiles[n];  // Array of structures

    // Input mobile details
    for (i = 0; i < n; i++) {
        printf("\nEnter details of mobile %d:\n", i + 1);
        printf("Mobile ID: ");
        scanf("%d", &mobiles[i].mobileID);
        printf("Brand: ");
        scanf("%s", mobiles[i].brand);
        printf("Model: ");
        scanf("%s", mobiles[i].model);
        printf("Price: ");
        scanf("%f", &mobiles[i].price);
        printf("Storage (GB): ");
        scanf("%d", &mobiles[i].storage);
    }

    // Display mobile details
    printf("\n--- Mobile Details ---\n");
    for (i = 0; i < n; i++) {
        printf("Mobile %d:\n", i + 1);
        printf("ID: %d\n", mobiles[i].mobileID);
        printf("Brand: %s\n", mobiles[i].brand);
        printf("Model: %s\n", mobiles[i].model);
        printf("Price: %.2f\n", mobiles[i].price);
        printf("Storage: %d GB\n", mobiles[i].storage);
        printf("----------------------\n");
    }

    return 0;
}
