#include <stdio.h>
#include <string.h>

// Define structure for bank account
struct BankAccount {
    int accountNo;
    char name[50];
    float balance;
};

// Function to display account details
void displayAccount(struct BankAccount acc) {
    printf("\n--- Account Details ---\n");
    printf("Account No: %d\n", acc.accountNo);
    printf("Name: %s\n", acc.name);
    printf("Balance: %.2f\n", acc.balance);
}

// Function to deposit money
void deposit(struct BankAccount *acc, float amount) {
    acc->balance += amount;
    printf("Deposited %.2f successfully!\n", amount);
}

// Function to withdraw money
void withdraw(struct BankAccount *acc, float amount) {
    if (amount > acc->balance) {
        printf("Insufficient balance!\n");
    } else {
        acc->balance -= amount;
        printf("Withdrawn %.2f successfully!\n", amount);
    }
}

int main() {
    struct BankAccount acc;
    int choice;
    float amount;

    // Create account
    printf("Enter Account Number: ");
    scanf("%d", &acc.accountNo);
    printf("Enter Account Holder Name: ");
    scanf("%s", acc.name);
    printf("Enter Initial Balance: ");
    scanf("%f", &acc.balance);

    // Menu-driven system
    do {
        printf("\n--- Bank Menu ---\n");
        printf("1. Display Account\n");
        printf("2. Deposit\n");
        printf("3. Withdraw\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                displayAccount(acc);
                break;
            case 2:
                printf("Enter amount to deposit: ");
                scanf("%f", &amount);
                deposit(&acc, amount);
                break;
            case 3:
                printf("Enter amount to withdraw: ");
                scanf("%f", &amount);
                withdraw(&acc, amount);
                break;
            case 4:
                printf("Exiting program...\n");
                break;
            default:
                printf("Invalid choice!\n");
        }
    } while(choice != 4);

    return 0;
}
