#include <stdio.h>

int main() {
    float amount;

    // Input purchase amount
    printf("Enter the purchase amount: ");
    scanf("%f", &amount);

    // Check discount eligibility
    if (amount >= 1000) {
        printf("Congratulations! You are eligible for a discount.\n");
    } else {
        printf("Sorry, no discount available.\n");
    }

    return 0;
}
